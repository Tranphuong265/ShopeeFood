<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CTQuanActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgQuan"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/ctten_quan"
        android:layout_below="@+id/imgQuan"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:elevation="4dp">
        <TextView
            android:id="@+id/y_u_th_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:text="Yêu thích"
            android:background="#C80000"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/nameQuan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop= "5dp"
            android:text="Tên quán"
            android:textAppearance="@style/nameQuan"
            android:gravity="top"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/giaonhan_voucher"
        android:layout_below="@id/ctten_quan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:elevation="4dp">
        <LinearLayout
            android:id="@+id/rectangle_6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="10dp">
            <View
                android:id="@+id/imgShip"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="#D9D9D9"/>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                android:id="@+id/giao_h_ng_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Giao hàng tiêu chuẩn"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/dukiengiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Dự kiến giao lúc 15:45"
                    android:textSize="14sp"
                    android:textColor="@color/black"

                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/voucherQuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dsPhobien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/giaonhan_voucher"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:elevation="4dp">
        <TextView
            android:id="@+id/m_n_ph_bi_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Món phổ biến"
            android:textAppearance="@style/monpb"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dspb"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="120dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/dsPhobien"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/Tab_ctquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_ctquan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>