<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    tools:context=".Activity.LoginActivity">
    <View
        android:id="@+id/shopee_food"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/shopeefood"
        android:elevation="4dp"
        />

    <TextView
        android:id="@+id/text_dn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopee_food"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|top"
        android:layout_marginTop="40dp"
        android:text="@string/dn"
        android:textAppearance="@style/text_dn" />
    <LinearLayout
        android:layout_below="@id/text_dn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <EditText
            android:id="@+id/username_dn"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="15dp"
            android:drawablePadding="7dp"
            android:hint="   Tên đăng nhập"
            android:background="@drawable/edt_design"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"/>
        <EditText
            android:id="@+id/pass_dn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/key"
            android:paddingLeft="15dp"
            android:hint="   Mật khẩu"
            android:background="@drawable/edt_design"
            android:drawablePadding="7dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:lines="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nutDn"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_dn"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/dn"
            android:textAppearance="@style/dn"
            app:elevation="20dp"/>
    </LinearLayout>



</RelativeLayout>